@model Vaccination.App.CQRS.Patients.Queries.GetPatient.PatientVM

@{
    ViewBag.Title = "Пациент";
}

<h2>@ViewBag.Title</h2>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FullName):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BirthDate):
        </dt>
        <dd class="col-sm-10">
            @Model.BirthDate
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Sex):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Sex)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.InsuranceNumber):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.InsuranceNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.InoculationsCount):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.InoculationsCount)
        </dd>
    </dl>

    @if (Model.Inoculations.Count > 0)
    {
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Дата прививки</th>
                    <th scope="col">Вакцина</th>
                    <th scope="col">Согласие</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var inoculation in Model.Inoculations)
                {
                    <tr>
                        <td>@inoculation.Date.ToShortDateString()</td>
                        <td>@inoculation.Vaccine.Name</td>
                        <td>@(inoculation.HasConsent ? "Есть" : "Нет")</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
<div>
    @Html.ActionLink("Редактировать", PatientsRoutes.edit, PatientsRoutes.controller, new {  id = Model.IntId  }) |
    <a asp-action="Index">Назад к списку</a>
</div>
